{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compiler",
            "command": "C:\\cygwin64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\core\\\/*.c",
                "-o",
                "${workspaceFolder}\\compiler.exe",
                "-I",
                "${workspaceFolder}\\src\\include\\"
            ],
            "options": {
                "cwd": "C:\\cygwin64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}